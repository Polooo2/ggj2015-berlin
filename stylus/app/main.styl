html, body
  width: 100%
  height: 100%
  overflow: hidden
  
  background-color: #000000
  user-select: none
  font-size: 1.5rem


  
.clickable
  cursor: pointer

.hidden
  display:none

.typed-cursor
  display: none


@font-face {
  font-family: 'riot_squad_nfregular';
  src: url('../assets/font/riotsquadnf-webfont.eot');
  src: url('../assets/font/riotsquadnf-webfont.eot?#iefix') format('embedded-opentype'),
  url('../assets/font/riotsquadnf-webfont.woff2') format('woff2'),
  url('../assets/font/riotsquadnf-webfont.woff') format('woff'),
  url('../assets/font/riotsquadnf-webfont.ttf') format('truetype'),
  url('../assets/font/riotsquadnf-webfont.svg#riot_squad_nfregular') format('svg');
  font-weight: normal;
  font-style: normal;

}
