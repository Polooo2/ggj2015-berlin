html, body
  width: 100%
  height: 100%
  overflow: hidden
  
  background-color: #000000
  user-select: none
  font-size: 1.5rem


  
.clickable
  cursor: pointer

.hidden
  display:none

.typed-cursor
  display: none

.loading {
  position: absolute;
  width: 400px
  height: 200px
  left: 50%;
  top: 50%;
  margin-left: -200px
  margin-top: -200px
  border-radius: 16px
  background-color: #b52d74;
  border: 8px solid #740342;
  color: #f3c7c7;
  padding: 10px;
  text-align: center;

  .percentage {
    font-weight: bold
    margin-top: 20px
  }
}
