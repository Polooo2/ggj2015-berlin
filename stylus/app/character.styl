#character
  .background
    width: 100%
    height: 100%

    &[data-active=none]
      background-image: url(asset('character/background.png'))

    &[data-active=char1]
      background-image: url(asset('character/background-active-char2.png'))

  .selection
    background: url(asset('character/select.png'))
    width: 483px
    height: 157px
    position: absolute
    top: 8px
    left: ((1024px - @width) / 2)

  .speech-bubble-container
    position: absolute
    width: 250px
    height: 250px
    top: 40px
    font-size: 1.3rem

    .bubble
      position: absolute
      border-radius: 50% 50%
      border: 1px solid #000000
      background-color: #ffffff
      width: 30px
      height: 30px;

    .bubble1
      left: 50px
      bottom: 35px
      width: 45px
      height: 45px

    .bubble2
      left: 20px
      bottom: 85px

    .bubble3
      left: 20px
      top: 20px
      width: 150px
      height: 100px
      text-align: center
      padding: 15px

  .character
    position: absolute
    width: 200px
    height: 400px
    top: 300px
    background-size: contain
    background-repeat: no-repeat

    .name
      text-shadow: 0px 0px 4px white
      white-space nowrap
      position: relative
      text-align: center
      top: -40px

    &.character0, &.character2, &.character3
      pointer-events: none

    &.character0
      width: 235px
      height: 445px
      left: 50px
      top: 200px
      background-image: url(asset('char1.png'))

    &.character1
      left: 400px
      background-image: url(asset('armoise.png'))

    &.character2
      top: 225px
      left: 650px
      background-image: url(asset('char3.png'))

    &.character3
      left: 800px
      width: 110px
      height: 112px
      top: 500px
      background-image: url(asset('char4.png'))

  .continue
    position: absolute
    cursor: pointer
    width: 226px
    height: 81px
    text-align: center
    bottom: 30px;
    transform: scale(1.1, 1.1);
    left: ((1024px - @width) / 2)
    background-image: url(asset('character/start.png'))

    &:hover
      background-image: url(asset('character/start_hover.png'))

    &.disabled
      pointer-events: none
      background-image: url(asset('character/start_inactive.png'))
