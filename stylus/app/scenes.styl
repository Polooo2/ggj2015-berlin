.scene
  position: absolute
  width: 100%
  height: 100%


#conversation {
  .conversation-area {
    height: 50%;
    bottom: 0px;
    position: absolute;
    margin-left: 20px;
    background-color: lightgray;
    border-radius: 5px;
    padding: 10px;
    width: 95%;

    ul {
      list-style-type: decimal;
      list-style-position: inside;
    }

    .text {
      margin-top: 50px;
      &-npc {
        float: left;
        clear:right;
        margin-bottom: 50px;
      }
      &-character {
        margin-bottom: 50px;
        float:right
      }
    }
    .answer {
      clear: both;
      background-color: gray;
      border-radius: 5px;
      margin-bottom: 5px;
    }
  }

}
