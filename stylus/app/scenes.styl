.scene
  position: absolute
  width: 100%
  height: 100%


#conversation {
  .conversation-area {
    height: 50%;
    bottom: 0px;
    position: absolute;
    margin-left: 20px;
    background-color: lightgray;
    border-radius: 5px;
    padding: 10px;
    width: 95%;

    .text {
      margin-top: 50px;
      &-npc {
        float: left;
        clear:right;
        margin-bottom: 50px;
        text-align: left;
        width: 85%
      }
      &-character {
        margin-bottom: 50px;
        float:right
        text-align: right;
        width: 85%
      }
    }
    .answers {
      clear: both;
      text-align: center;
    }

    .answer {
      background-color: gray;
      border-radius: 5px;
      padding: 3px;
      margin: 5px;
    }
  }

}
