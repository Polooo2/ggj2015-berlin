
$seperator = 650px;


#game {
  background: #000000

  .floors {
    float: left;
    width: (1024px - $seperator);
    #wrapper {
      height: 768px;
      left: 0;
      width: 100%;
      overflow: hidden;
    }
    #scroller {
      -webkit-tap-highlight-color: rgba(0,0,0,0);
      width: 100%;
      transform: translateZ(0);
      -webkit-touch-callout: none;
      user-select: none;
    }
    #scroller ul {
      list-style: none;
      padding: 0;
      margin: 0;
      width: 100%;
    }
    #scroller li {
      height:768px;

      &.inbetween {
        background-image: url(asset('game/inbetween.png'));
      }

      &.floor1 {
        background-image: url(asset('game/floor1.png'));
      }

      &.floor2 {
        background-image: url(asset('game/floor2.png'));
      }
    }
  }
  .elevator {
    float: left;
    width: $seperator;
    height: 100%;
    background-image: url(asset('game/elevator.png'))
  }

  .elevator-door {
    position: absolute;
    height: 100%;
    background-image: url(asset('game/door.png'))
    left: (1024px - $seperator);
    width: 58px;
  }

  .bubble {
    position: absolute
    top: 150px
    left: 300px
    width: 309px;
    height: 215px;
    background-image: url(asset('game/bubble.png'))

    .text {
      margin-left: 10px
      margin-top: 10px
    }
  }
  .character {
    position: absolute;
    bottom: 22px;
    left: -300px;
    transition: transform 3000ms;
    background-size: contain;

    &.armoise {
      background-image: url(asset('armoise.png'));
      width: 287px;
      height: 456px;
    }

    &.meryl {
      background-image: url(asset('meryl.png'));
      width: 250px;
      height: 456px;
      margin-left: 30px;
    }

    &.bark {
      background-image: url(asset('bark.png'));
      width: 137px;
      height: 156px;
      margin-left: 100px;
    }

    &.npc0 {
      background-image: url(asset('demolitos.png'))
      width: 226px;
      height: 500px;
    }
    &.npc1 {
      background-image: url(asset('table.png'));
      width: 285px;
      height: 223px;
    }
    &.npc2 {
      background-image: url(asset('phostnack.png'));
      width: 280px;
      height: 337px;
    }

    &.right-side {
      transform: translateX(980px)
    }

    &.left-side {
      transform: translateX(730px)
    }

    &.out-side {
      transform: translateX(-730px)
    }
  }
}
